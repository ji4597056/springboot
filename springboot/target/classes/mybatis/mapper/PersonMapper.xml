<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.study.spring.dao.redis.IPersonMapper">
    <!--
        insert时自动生成主键（uuid）
        mysql：
             <selectKey keyProperty="id" resultType="String" order="BEFORE">
                SELECT UUID()
             </selectKey>
        oracle：
             <selectKey keyProperty="id" resultType="String" order="BEFORE">
                select sys_guid() from dual
             </selectKey>
    -->
    <insert id="addPersons" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO person (name)
        VALUES
        <foreach item="person" collection="list" separator=",">
            (#{person.name})
        </foreach>
    </insert>

    <delete id="deletePersonByIds">
        DELETE FROM person
        WHERE id IN
        <foreach collection="ids" item="id" separator="," open="(" close=")">
            #{id}
        </foreach>
    </delete>

    <select id="findPersons" resultType="com.study.spring.entity.Person">
        SELECT * FROM person
    </select>
</mapper>